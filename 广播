(function(Scratch) {
  'use strict';
  let outputVar = {};
  let CRmenu = ['1', '2', '3', '4', '5']
  class Broadcast2 {
    getInfo() {
      return {
        id: 'broadcast2example',
        name: '广播扩展2',
        blocks: [
          {
            opcode: 'addCR',
            blockType: Scratch.BlockType.BUTTON,
            text: '添加自定义广播',
            func: 'addCR',
            disableMonitor: true,
          },
          {
            opcode: 'removeCR',
            blockType: Scratch.BlockType.BUTTON,
            text: '移除自定义广播',
            func: 'removeCR',
            disableMonitor: true,
          },
          {
            opcode: 'whenReceived',
            blockType: Scratch.BlockType.HAT,
            text: '当接收到 [EVENT_OPTION]',
            isEdgeActivated: false,
            arguments: {
              EVENT_OPTION: {
                type: Scratch.ArgumentType.STRING,
                menu: 'EVENT_FIELD'
              }
            }
          },
          {
            opcode: 'broadcast',
            blockType: Scratch.BlockType.REPORTER,
            text: '广播 [EVENT] [INPUT] 并等待 [TIME] 秒',
            arguments: {
              EVENT: {
                type: Scratch.ArgumentType.STRING,
                menu: 'EVENT_FIELD'
              },
              INPUT: {
                type: Scratch.ArgumentType.STRING
              },
              TIME: {
                type: Scratch.ArgumentType.NUMBER
              }
            }
          },
          {
            opcode: 'getinput',
            blockType: Scratch.BlockType.REPORTER,
            text: '获取 [EVENT] 的值',
            arguments: {
              EVENT: {
                type: Scratch.ArgumentType.STRING,
                menu: 'EVENT_FIELD'
              }
            }
          },
          {
            opcode: 'setinput',
            blockType: Scratch.BlockType.COMMAND,
            text: '将 [EVENT] 设为 [INPUT]',
            arguments: {
              EVENT: {
                type: Scratch.ArgumentType.STRING,
                menu: 'EVENT_FIELD'
              },
              INPUT: {
                type: Scratch.ArgumentType.STRING
              }
            }
          },
        ],
        menus: {
          EVENT_FIELD: {
            acceptReporters: false,
            items: CRmenu
          }
        }
      };
    }
    broadcast({ EVENT, INPUT, TIME }, util) {
      const wait = (args) => {
        return new Promise((resolve, reject) => {
          const timeInMilliseconds = TIME * 1000;
          setTimeout(() => {
            resolve();
          }, timeInMilliseconds);
        });
      };
      util.startHats('broadcast2example_whenReceived', {
        EVENT_OPTION: EVENT,
      });
      outputVar[EVENT] = INPUT;
      return wait({ TIME: 5 }).then(() => {
        return outputVar[EVENT];
      });
    }
    getinput({EVENT}) {
      return outputVar[EVENT];
    }
    setinput({EVENT, INPUT}) {
      outputVar[EVENT] = INPUT
    }
    addCR() {
      const newReporterName = prompt("请输入自定义广播的名称");
      CRmenu.push(newReporterName);
      console.log(CRmenu);
    }
    removeCR() {
      const reporterNameToRemove = prompt("请输入要移除的自定义广播名称");
      CRmenu = CRmenu.filter(item => item !== reporterNameToRemove);
      console.log(CRmenu);
    }
  }
  Scratch.extensions.register(new Broadcast2());
}(Scratch));
